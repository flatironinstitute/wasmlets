{
  "name": "wasmlets",
  "version": "0.0.5",
  "description": "WASM compiled code for wavelet decompositions. Currently based on https://github.com/rafat/wavelib",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "repository": "https://github.com/flatironinstitute/wasmlets",
  "author": "Brian Ward",
  "license": "BSD-3-Clause",
  "scripts": {
    "test": "vitest run",
    "prepack": "make && yarn build",
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier . --write",
    "lint": "eslint && tsc --noEmit && attw --pack . --profile node16"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "shims": true,
    "clean": true
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.3",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.17.0",
    "prettier": "^3.3.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.19.1",
    "vitest": "^1.6.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
